<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.gianlu.commonutils.misc.SuperTextView
        android:id="@+id/soaItem_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary" />

    <com.gianlu.commonutils.misc.SuperTextView
        android:id="@+id/soaItem_primaryDns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary" />

    <com.gianlu.commonutils.misc.SuperTextView
        android:id="@+id/soaItem_serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary" />

    <com.gianlu.commonutils.misc.SuperTextView
        android:id="@+id/soaItem_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary" />

    <com.gianlu.commonutils.misc.SuperTextView
        android:id="@+id/soaItem_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary" />

    <com.gianlu.commonutils.misc.SuperTextView
        android:id="@+id/soaItem_expire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary" />

    <com.gianlu.commonutils.misc.SuperTextView
        android:id="@+id/soaItem_minimumTtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary" />

</LinearLayout>